                    <p class="fs-5">ПРОИЗХОД И ДЕЙСТВИЕ ВЪРХУ КОЖАТА И ПРОДУКТА</p>
                </div>
            </div>
            <!-- Carousel Item 1 End -->
            <!-- Carousel Item 2 Start -->
            <div class="carousel-item">
                <img src="./files/ingredients/carousel/image-02.webp"
                     alt="1687301198446-L.png"
                     width="1411"
                     height="228"
                     style="
                  width: 1573px;
                  height: 228px;
                  object-fit: cover;
                  object-position: 50% 50%;
                "
